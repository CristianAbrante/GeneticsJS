{
  "name": "genetics.js",
  "version": "0.1.0",
  "description": "Genetic algoritms library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CristianAbrante/GeneticsJS.git"
  },
  "keywords": [
    "genetics algoritms",
    "evolutionary algorithms",
    "algorithms",
    "optimization"
  ],
  "author": "Cristian Abrante",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CristianAbrante/GeneticsJS/issues"
  },
  "homepage": "https://github.com/CristianAbrante/GeneticsJS#readme",
  "devDependencies": {
    "@types/jest": "^24.0.6",
    "jest": "^24.1.0",
    "prettier": "^1.16.4",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.3.3"
  },
  "files": [
    "lib/**/*"
  ]
}
